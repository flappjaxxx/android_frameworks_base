<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:systemui="http://schemas.android.com/apk/res/com.android.systemui"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:visibility="gone"
	android:orientation="vertical"
	android:background="@*android:drawable/notify_panel_notification_icon_bg_tile">


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="90dip"
		android:orientation="vertical"
		android:id="@+id/brightness_layout">
		<View
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="@drawable/status_bar_hr" />
		<TextView
			android:textAppearance="@style/TextAppearance.StatusBar.Date"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:paddingTop="4dp"
			android:paddingLeft="10dp"
			android:gravity="center_vertical|left"
			android:text="@string/brightness_label" />
		<com.android.systemui.statusbar.policy.ToggleSlider
			android:id="@+id/brightness"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:paddingLeft="10dp"
			android:paddingRight="2dp"
			systemui:text="@string/status_bar_settings_auto_brightness_label" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/row1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1">
			<com.android.systemui.statusbar.policy.WifiToggle
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				systemui:labelText="@string/status_bar_settings_wifi_button"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1">
			<com.android.systemui.statusbar.policy.GpsToggle
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				systemui:labelText="@string/status_bar_settings_gps_button"  />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/row1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1">
				<com.android.systemui.statusbar.policy.BluetoothToggle
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					systemui:labelText="@string/status_bar_settings_bluetooth_button" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1">
			<com.android.systemui.statusbar.policy.NetworkToggle
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				systemui:labelText="@string/toggle_data" />
		</LinearLayout>
	</LinearLayout>

	<com.android.systemui.statusbar.policy.AutoRotateToggle
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		systemui:labelText="@string/status_bar_settings_auto_rotation" />

</LinearLayout>